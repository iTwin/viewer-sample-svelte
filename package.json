{
  "name": "viewer-sample-svelte",
  "version": "1.0.0",
  "description": "A Svelte implementation of the iTwin Viewer.",
  "author": {
    "name": "Bentley Systems, Inc.",
    "url": "http://www.bentley.com"
  },
  "license": "MIT",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "build:select-tool": "pnpm --stream --filter \"@itwin/select-tool-extension-sample\" build",
    "build:svelte-app": "pnpm --stream --filter \"@itwin/viewer-sample-svelte\" build",
    "build": "pnpm build:select-tool && pnpm build:svelte-app",
    "start": "pnpm --stream --filter \"@itwin/viewer-sample-svelte\" dev"
  },
  "pnpm": {
    "overrides": {
      "@itwin/select-tool-extension-sample": "workspace:*"
    }
  }
